<h1>Editar {{user.name}}</h1>
<form action="/users/create" method="POST" class="form">
<input type="hidden" name="id" value="{{user._id}}">
    <div class="form-control">
        <label for="name">Nome</label>
        <input type="text" name="name" placeholder="Digite o nome do usuario" value="{{user.name}}">
    </div>
    <div class="form-control">
        <label for="occupation">Profissão</label>
        <input type="text" name="occupation" placeholder="Digite sua profissão"value="{{user.occupation}}">
    </div>
    <div class="form-control form-checkbox">
        {{#if user.newslatter}}
        <input type="checkbox" name="newslatter" checked>
        {{else}}
        <input type="checkbox" name="newslatter" >
        {{/if}}
        <label for="newslatter">Enviar Promoçoes ?</label>
    </div>
    <input type="submit" value="Editar">

</form>
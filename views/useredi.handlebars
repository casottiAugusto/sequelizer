<h1>Editar {{user.name}}</h1>
<form action="/users/edit" method="POST" class="form">
<input type="hidden" name="id" value="{{user.id}}">
    <div class="form-control">
        <label for="name">Nome</label>
        <input type="text" name="name" placeholder="Digite o nome do usuario" value="{{user.name}}">
    </div>
    <div class="form-control">
        <label for="occupation">Profissão</label>
        <input type="text" name="occupation" placeholder="Digite sua profissão"value="{{user.occupation}}">
    </div>
    <div class="form-control form-checkbox">
        {{#if user.newsletter}}
        <input type="checkbox" name="newsletter" checked>
        {{else}}
        <input type="checkbox" name="newsletter" >
        {{/if}}
        <label for="newsletter">Enviar Promoçoes ?</label>
    </div>
    <input type="submit" value="Editar">
</form>
<div class="address-container">
    <h2>Endereco</h2>
    <form action="/address/create" method="post">
    <input type="hidden" name="userId" value="{{user.id}}">
        <div class="form-control">
            <label for="street">Rua</label>
            <input type="text" name="street" placeholder="Digite o nome da rua">
        </div>
        <div class="form-control">
            <label for="number">Número</label>
            <input type="text" name="number" placeholder="Digite o numero da casa">
        </div>
        <div class="form-control">
            <label for="city">Cidade</label>
            <input type="text" name="city" placeholder="Digite o nome da cidade">
        </div>
        <input type="submit" value="Adicionar Endereço">
    </form>
</div>